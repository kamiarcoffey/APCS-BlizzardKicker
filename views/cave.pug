    .wrapper
      // Sidebar
      nav#sidebar
        .sidebar-header
          h3 Customize Your Stoke
        .form-group
          label(for='passHeld') Pass Held:
          select#passHeld.form-control(name='passHeld')
            option None
            option Ikon Pass
            option Epic Local Pass
        .form-group
          label(for='snowConditionsRange') Snow Surface Type:
          select#snowConditionsRange.form-control(name='snowConditionsRange')
            option Powder
            option Packed Powder
            option Machine Made
            option Machine Groomed
            option Hard Packed
            option Spring
            option Corn
            option Variable
            option Wet
        .form-group
          label(for='trafficRange') Arrival Time:
          select#trafficRange.form-control(name='trafficRange')
            option ASAP
            option No Rush
        .form-group
          label(for='weatherRange') Preferred Weather:
          select#weatherRange.form-control(name='weatherRange')
            option No Preference
            option Cold
