-data = data || {}

if errors
	ul.my-errors
		for error in errors
			li= error.msg

form(action="." method="POST" class="form-registration")
	label(for="Email") email:
	input(
		type="text"
		id="email"
		name="email"
		class="form-control"
		value=data.email
	)

	label(for="Password") password:
	input(
		type="text"
		id="password"
		name="password"
		class="form-control"
		value=data.password
	)

	input(
		type="submit"
		value="Submit"
		class="btn btn-lg btn-primary btn-block"
	)
